<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TeacherDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bgHeader"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/header_register"
        android:theme="@style/ToolbarTheme"
        android:elevation="5dp" />

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:elevation="5dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/tvTPName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:elevation="10dp"
        android:transitionName="tvSignUp"
        android:text="Name"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="-25dp"
        android:layout_marginEnd="-25dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/circletransparant" />

    <ImageView
        android:id="@+id/circle3"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-80dp"
        android:layout_marginBottom="-30dp"
        android:src="@drawable/circle" />



    <androidx.cardview.widget.CardView
        android:id="@+id/teacherCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTPName"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="10dp"
        app:cardCornerRadius="55dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tp_img"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_upload" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teacherCard">

        <LinearLayout

            android:id="@+id/tPLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/tProfileCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="left">

                    <TextView
                        android:id="@+id/tPDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        android:text="Department"/>

                    <EditText
                        android:id="@+id/edit_deptT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tPDesig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        android:text="designation"/>

                    <EditText
                        android:id="@+id/edit_desig"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tPEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        android:text="Email"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/btnAddTime"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_ui"
                android:text="Add Free Time"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

            <androidx.cardview.widget.CardView
                android:id="@+id/addFreeTimeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/dateFreePick"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:editable="false"
                        android:hint="Date"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        tools:ignore="Deprecated"
                        android:focusable="true"
                        android:clickable="true"/>

                    <EditText
                        android:id="@+id/startTimePick"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:editable="false"
                        android:hint="Start Time"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        tools:ignore="Deprecated"
                        android:focusable="true"
                        android:clickable="true" />
                    <EditText
                        android:id="@+id/endTimePick"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:editable="false"
                        android:hint="End Time"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        tools:ignore="Deprecated"
                        android:focusable="true"
                        android:clickable="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_margin="10dp">
                        <Button
                            android:id="@+id/addBtn"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:text="Add"
                            android:textColor="@android:color/white"
                            android:background="@drawable/bg_ui"/>
                        <Button
                            android:id="@+id/cancelBtn"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:text="Cancel"
                            android:textColor="@android:color/white"
                            android:background="@drawable/bg_cancel"/>

                    </LinearLayout>
                </LinearLayout>



            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/freeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:text="My Appointment Schedule:"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tFreeTimeRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlueT"
                        android:layout_margin="10dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>




</RelativeLayout>