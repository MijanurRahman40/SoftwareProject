<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:text="Appointment Details"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:id="@+id/tDetailsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="RtlHardcoded">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/apDate"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableEnd="@drawable/colon"
                        android:padding="5dp"
                        android:text="Date"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/apDateValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/apDate"
                        android:drawableEnd="@drawable/pen"
                        android:padding="5dp"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/apTimeRange"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableEnd="@drawable/colon"
                        android:padding="5dp"
                        android:paddingTop="5dp"
                        android:text="Free Time"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/apTimeRangeValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/apTimeRange"
                        android:drawableEnd="@drawable/pen"
                        android:padding="5dp"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/maxApply"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableEnd="@drawable/colon"
                        android:padding="5dp"
                        android:text="Max Apply"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/maxApplyValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/maxApply"
                        android:drawableEnd="@drawable/pen"
                        android:padding="5dp"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/reqApply"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableEnd="@drawable/colon"
                        android:padding="5dp"
                        android:text="Requested"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/reqApplyValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/reqApply"
                        android:drawableEnd="@drawable/eye"
                        android:padding="5dp"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/accApply"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableEnd="@drawable/colon"
                        android:padding="5dp"
                        android:text="Accepted"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/accApplyValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/accApply"
                        android:drawableEnd="@drawable/eye"
                        android:padding="5dp"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:layout_marginEnd="40sp"
                android:layout_marginBottom="10dp"
                android:text="Delete"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_ui"/>
            <Button
                android:id="@+id/apCancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:layout_marginBottom="10dp"
                android:text="Cancel"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_cancel"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>